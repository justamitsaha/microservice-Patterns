{
  "id": null,
  "title": "HTTP Overview",
  "tags": ["http", "services"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Rate (RPS)",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {"expr": "sum(rate(http_server_requests_seconds_count[1m])) by (job)", "legendFormat": "{{job}}"}
      ]
    },
    {
      "type": "timeseries",
      "title": "p95 Latency (s)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, job))", "legendFormat": "{{job}}"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Error Rate (5xx) RPS",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {"expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\"}[1m])) by (job)", "legendFormat": "{{job}}"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Active Requests",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {"expr": "sum(http_server_requests_active) by (job)", "legendFormat": "{{job}}"}
      ]
    }
  ]
}

